# This file contains the fastlane.tools configuration
# You can find the documentation at https://docs.fastlane.tools
#
# For a list of all available actions, check out
#
#     https://docs.fastlane.tools/actions
#
# For a list of all available plugins, check out
#
#     https://docs.fastlane.tools/plugins/available-plugins
#

# Uncomment the line if you want fastlane to automatically update itself
# update_fastlane

default_platform(:ios)

platform :ios do
  desc "Generate new localized screenshots"
  lane :snap_bayern do
   sh "fvm flutter pub run build_runner build --define df_build_config=name=bayern"
    capture_screenshots(
      workspace: "Runner.xcworkspace", 
      scheme: "ScreenshotTests",
      app_identifier: "de.nrw.it.ehrensachebayern",
      launch_arguments: ["de.nrw.it.ehrensachebayern"],
      output_directory: "./fastlane/screenshots/bayern",
    )
  end

  lane :snap_nuernberg do
    sh "fvm flutter pub run build_runner build --define df_build_config=name=nuernberg"
    capture_screenshots(
      workspace: "Runner.xcworkspace", 
      scheme: "ScreenshotTests", 
      app_identifier: "app.sozialpass.nuernberg",
      launch_arguments: ["app.sozialpass.nuernberg"],
      output_directory: "./fastlane/screenshots/nuernberg",
    )
  end
end
